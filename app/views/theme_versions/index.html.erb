<p id="notice"><%= notice %></p>

<h1>Theme Versions</h1>

<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Version</th>
      <th>Details</th>
      <th>Theme file</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theme_versions.each do |theme_version| %>
      <tr>
        <td><%= theme_version.theme.name %></td>
        <td><%= theme_version.version %></td>
        <td><%= theme_version.details %></td>
        <td><%= link_to 'Download', theme_version.theme_file.url %></td>
        <td><%= link_to 'Show', theme_version %></td>
        <td><%= link_to 'Edit', edit_theme_version_path(theme_version) %></td>
        <td><%= link_to 'Destroy', theme_version, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

